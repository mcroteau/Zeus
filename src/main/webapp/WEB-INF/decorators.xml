<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/jsp/layouts">
    <decorator name="authenticated" page="authenticated.jsp">
        <pattern>*</pattern>
    </decorator>
    <decorator name="mobile" page="mobile.jsp">
        <pattern>*/mobile</pattern>
    </decorator>
    <decorator name="home" page="home.jsp">
        <pattern>*/uno</pattern>
        <pattern>*/signup</pattern>
        <pattern>*/registration</pattern>
    </decorator>
    <decorator name="guest" page="guest.jsp">
        <pattern>*/signin</pattern>
        <pattern>*/account/edit*</pattern>
        <pattern>*/account/reset*</pattern>
        <pattern>*/account/send_reset*</pattern>
        <pattern>*/account/confirm*</pattern>
        <pattern>*/issues/report*</pattern>
        <pattern>*/invite*</pattern>
    </decorator>
    <decorator name="resource" page="resource.jsp">
        <pattern>*/resource</pattern>
        <pattern>*/resource/like</pattern>
        <pattern>*/resource/share</pattern>
        <pattern>*/resource_success</pattern>
        <pattern>*/get_code</pattern>
        <pattern>*/privacy</pattern>
        <pattern>*/eula</pattern>
    </decorator>
    <decorator name="admin" page="admin.jsp">
        <pattern>*/accounts</pattern>
        <pattern>*/posts/flagged*</pattern>
        <pattern>*/post/review*</pattern>
        <pattern>*/unauthorized</pattern>
    </decorator>
</decorators>